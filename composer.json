{
	"name": "vierwd/typo3-base",
	"description": "FORWARD MEDIA TYPO3 base setup",
	"type": "typo3-cms-extension",
	"keywords": [
		"TYPO3",
		"extension"
	],
	"support": {
		"issues": "https://github.com/4wdmedia/vierwd_base/issues"
	},
	"authors": [{
		"name": "FORWARD MEDIA",
		"email": "kontakt@4wdmedia.de",
		"homepage": "https://www.4wdmedia.de",
		"role": "Developer"
	}],
	"require": {
		"php": ">=7.2.0",
		"typo3/cms-core": "^9.4",
		"vierwd/svg-inliner": "^1.0",
		"masterminds/html5": "^2.6"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.0",
		"friendsofphp/php-cs-fixer": "^2.12.0",
		"nimut/testing-framework": "^4.0.0",
		"vierwd/coding-standard": "^1.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.4"
	},
	"autoload": {
		"psr-4": {
			"Vierwd\\VierwdBase\\": "Classes"
		}
	},
	 "autoload-dev": {
		"psr-4": {
			"Vierwd\\VierwdBase\\Tests\\": "Tests",
			"TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
		}
	},
	"replace": {
		"vierwd/typo3_base": "self.version"
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0.x-dev"
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web",
			"Package": {
				"protected": true,
				"partOfFactoryDefault": true,
				"partOfMinimalUsableSystem": true
			}
		}
	},
	"scripts": {
		"test": [
			".Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/",
			".Build/bin/phpcs --runtime-set ignore_warnings_on_exit 1 --standard=.Build/vendor/vierwd/coding-standard/ForwardMediaModern Classes/"
		]
	}
}
